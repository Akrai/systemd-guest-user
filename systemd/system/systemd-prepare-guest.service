[Unit]
DefaultDependencies=no
Requires=home-guest.mount
After=home-guest.mount systemd-tmpfiles-setup.service

RefuseManualStart=yes
RefuseManualStop=yes

[Service]
Type=oneshot
ExecStart=/usr/sbin/bash -c 'exec rsync -r -E --specials /usr/share/guest-configuration/ /home/guest'
ExecStart=/usr/sbin/chown -R guest:users /home/guest
