[Unit]
DefaultDependencies=no
Requires=home-guest.mount
After=home-guest.mount systemd-tmpfiles-setup.service

RefuseManualStart=yes
RefuseManualStop=yes

[Service]
Type=oneshot
ExecStart=/usr/sbin/systemd-prepare-guest
ExecStart=/usr/sbin/bash -c 'exec rsync -r -pEAXog --specials /usr/share/guest-configuration /home/guest'
